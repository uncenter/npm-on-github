{
    "name": "npm-on-github-extension",
    "version": "1.0.0",
    "description": "View NPM package downloads for Github repositories",
    "main": "index.js",
    "scripts": {
        "watch": "webpack --config webpack/webpack.dev.js --watch",
        "build": "webpack --config webpack/webpack.prod.js",
        "zip": "npm run build && zip -r extension.zip dist/*",
        "clean": "rimraf dist",
        "test": "npx jest",
        "style": "prettier --write \"src/**/*.{ts}\""
    },
    "license": "MIT",
    "devDependencies": {
        "@types/chrome": "0.0.158",
        "@types/jest": "^27.0.2",
        "copy-webpack-plugin": "^9.0.1",
        "glob": "^7.1.6",
        "jest": "^27.2.1",
        "prettier": "^2.2.1",
        "rimraf": "^3.0.2 ",
        "ts-jest": "^27.1.5",
        "ts-loader": "^8.0.0",
        "typescript": "^4.4.3 ",
        "webpack": "^5.76.0",
        "webpack-cli": "^4.0.0",
        "webpack-merge": "^5.0.0"
    },
    "dependencies": {
        "chart.js": "^4.3.0"
    }
}
