		"eslint-config-prettier": "^9.0.0",
		"eslint-plugin-import": "^2.29.0",
		"eslint-plugin-unicorn": "^48.0.1",
		"eslint-plugin-vitest": "^0.3.2",
		"prettier": "^3.0.3",
		"rimraf": "^5.0.5",
		"typescript": "^5.2.2",
