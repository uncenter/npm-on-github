{
	"manifest_version": 3,
	"name": "NPM on GitHub",
	"version": "0.1.0",
	"description": "View NPM package downloads right on GitHub.",
	"icons": {
		"16": "icons/icon16.png",
		"48": "icons/icon48.png",
		"128": "icons/icon128.png"
	},
	"permissions": ["storage"],
	"content_scripts": [
		{
			"matches": ["*://github.com/*"],
			"js": ["content_script.js"],
			"css": ["styles.css"]
		}
	],
	"action": {
		"default_title": "NPM on GitHub",
		"default_popup": "popup.html"
	}
}
